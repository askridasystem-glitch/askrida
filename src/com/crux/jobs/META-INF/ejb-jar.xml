<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>
<ejb-jar>
    <display-name></display-name>
    <enterprise-beans>
        <session>
            <ejb-name>JobConfigEJB</ejb-name>
            <home>com.crux.jobs.ejb.JobConfigHome</home>
            <remote>com.crux.jobs.ejb.JobConfig</remote>
            <ejb-class>com.crux.jobs.ejb.JobConfigEJB</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>

        <assembly-descriptor>
            <container-transaction>
                <description>Transaction attributes for 'JobConfigEJB' methods</description>
                <method>
                    <ejb-name>JobConfigEJB</ejb-name>
                    <method-name>*</method-name>
                </method>
                <trans-attribute>Required</trans-attribute>
            </container-transaction>
        </assembly-descriptor>

    </enterprise-beans>
</ejb-jar>